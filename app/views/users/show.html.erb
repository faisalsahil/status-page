<div class="page-header">
  <h2><%= @user.username %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name</strong></dt>
  <dd><%= @user.username %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong>Last Sign In</strong></dt>
  <dd><%= ActiveSupport::TimeZone[current_user.time_zone].parse(@user.last_sign_in_at.to_s) %></dd>
  <dt><strong>Last Sign In IP</strong></dt>
  <dd><%= @user.last_sign_in_ip %></dd>
  <dt><strong>Created At</strong></dt>
  <dd><%= ActiveSupport::TimeZone[current_user.time_zone].parse(@user.created_at.to_s) %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Update',edit_user_path(@user), :class => 'btn btn-mini btn-info' %>
  <%= link_to 'Back',users_path, :class => 'btn btn-mini btn-primary' %></div>