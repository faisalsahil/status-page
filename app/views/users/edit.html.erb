<div class="container" style="margin: 0px auto 0px auto;width: 400px;">
    <div class="panel panel-default" style="width:350px; border:0">
        <div class="panel-body">
            <h2>Edit User</h2>

            <%= form_for :user, :url => {:action => :update}, method: :put do |f| %>
                
                <div><%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, :class => 'form-control', :value => @user.email%>
                </div>

                <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
                </div>

                <div><%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
                </div>

                </br>
                <div><%= f.submit "Update", :class => 'btn btn-success form-control' %>
                </div>
            <% end %>
        </div>
    </div>

</div>